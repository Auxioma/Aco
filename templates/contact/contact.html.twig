{% extends 'base.html.twig' %}

{% block title %}Assistance: contacter ACOPROPRETE par téléphone, par e-mail{% endblock %}
{% block description %}Vous souhaitez obtenir des réponses à vos questions ? Dans ce cas, sachez que vous disposez d'un numéro de téléphone{% endblock %}

{% block body %}
    {% cache "PageContact" tags('contact') %}
        <!-- Contact Area V3 -->
        <section class="contact-v2 contact-v3 pt-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="contact-v2-left">
                            <div class="bixol-title-area">
                                <span class="bixol-subtitle">Nos coordonnées</span>
                                <h3>Nous voulons partager notre  <span>pour nous trouver facilement.</span></h3>
                            </div>
                            <div class="contact-left-img">
                                <img src="{{ asset('images/contact.jpg') }}" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 align-self-end">
                        <div class="contact-v2-right">
                            {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="fname">
                                            {{ form_widget(form.nom) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="lname">
                                            {{ form_widget(form.telephone) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="mail-field">
                                            {{ form_widget(form.email) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="phone-number">
                                            {{ form_widget(form.metier) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="message-field">
                                            {{ form_widget(form.message) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="submit-btn">
                                    <button type="submit"><i class="fas fa-check-circle"></i>Envoyer votre message</button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Contact V3 End -->

        <!-- Contact V3 Info Content  -->
        <section class="contact-v3-info-content pt-60 pb-120">
            <div class="container">
                <div class="info-content">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-4">
                            <div class="info-item">
                                <div class="icon-wrapper">
                                    <i class="flaticon flaticon-pin"></i>
                                </div>
                                <div class="item-content">
                                    <h4>Notre adresse:</h4>
                                    <p>1, Rue des Peupliers, 74500 lugrin</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="info-item">
                                <div class="icon-wrapper">
                                    <i class="flaticon flaticon-mail"></i>
                                </div>
                                <div class="item-content">
                                    <h4>Mail:</h4>
                                    <p>aco@acoproprete.com</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="info-item">
                                <div class="icon-wrapper">
                                    <i class="flaticon flaticon-phone"></i>
                                </div>
                                <div class="item-content">
                                    <h4>Telephone:</h4>
                                    <p>+33 6 95 74 93 94 </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Info Content End -->
    {% endcache %}
{% endblock %}