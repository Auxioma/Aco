<!-- Home 2 Header  -->
<header class="bixol-header header-style-2">
    <div class="info-bar">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-9">
                    <div class="info-left">
                        <span><i class="flaticon-telephone"></i><strong>Téléphone: </strong>04 57 43 83 23 </span>
                        <span><i class="flaticon-chat-box"></i><strong>Email: </strong>contact@acoproprete.com</span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3">
                    <div class="header-social">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-1">
                    <div class="logo-wrapper">
                        <a href="{{ path('app_homepage') }}" class="desktop-logo"><img src="{{ asset('images/logo.png') }}" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-8 desktop-menu-wrapper">
                    <div class="desktop-menu">
                        <nav>
                            <ul itemscope itemtype="https://schema.org/BreadcrumbList">
                                {% block navigation %}
                                    {% for categorie in categories %}
                                        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                                            <a  itemprop="item" href="{{ url( categorie.slug ) }}">
                                                <span itemprop="name">
                                                    {{ categorie.name }}
                                                </span>
                                            </a>
                                            <meta itemprop="position" content="{{ loop.index }}" />
                                        </li>
                                    {% endfor %}
                                {% endblock %}   
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="col-lg-3 col-11">
                    <div class="header-right">
                        <div class="header-search">

                        </div>
                        <div class="bixol-mobile-hamburger">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Header Area End -->